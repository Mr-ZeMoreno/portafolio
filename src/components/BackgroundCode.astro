<script>
  import type { HTMLString } from "astro/dist/runtime/server";
  import hljs from "highlight.js";
  import "highlight.js/styles/default.css";

  const html = document.querySelector("html") as HTMLElement;
  const htmlCode = html.innerHTML;

  const language = "html";
  const ignoreIllegals = true;

  const highlightedHtml = hljs.highlight(htmlCode, {
    language,
    ignoreIllegals,
  }).value;

  const $codigo = document.querySelector(".codigo-html") as HTMLElement;
  $codigo.innerHTML = highlightedHtml;
</script>

