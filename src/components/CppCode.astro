<script>
    import hljs from "highlight.js/lib/core";
    import cpp from "highlight.js/lib/languages/cpp";
    import "highlight.js/styles/default.css";
    import { $ } from "../js/utils";

    hljs.registerLanguage("cpp", cpp);

    const cppCode = `
      int vida(int dias_destinados) {
          if(dias_destinados == 0) {
              hablar_con_dios();
              return 0;
          } else {
              despertar();
              comer();
              dormir();
              return vida(dias_destinados - 1);
          }
      }
    `;

    const highlightedCpp = hljs.highlight(cppCode, {
        language: "cpp",
        ignoreIllegals: true,
    }).value;

    document.addEventListener("DOMContentLoaded", () => {
        $(".codigo-cpp").innerHTML = highlightedCpp;
    });
</script>

