---
import BackgroundCode from "../components/BackgroundCode.astro";
import Consola from "../components/Consola.astro";
import Status from "../components/Status.astro";
import Imagen from "../components/reproductor/Reproductor.jsx";
import Layout from "../layouts/Layout.astro";
import VerticalText from "../components/VerticalText.astro";

import { PROD_ENV } from "astro:env/client";
console.log(PROD_ENV);
---

<Layout title="Mr-ZeMoreno">
  {
    PROD_ENV && (
      <div class="fixed text-white text-center flex flex-col justify-center items-center md:hidden h-full w-full z-50 bg-black top-0 left-0">
        <p>
          Lo siento, aún estoy desarrollando para esta relaciones de aspecto.
          <br />
          Por favor visítanos en un PC.
        </p>
        <img src="/svg/crane.svg" alt="crane" class="h-20 w-20 mt-4" />
      </div>
    )
  }

  <BackgroundCode />
  <section
    class="black-paper bg-[#141212e1] h-[100dvh] md:h-[70dvh] md:bg-[#262626cc] bg-none md:bg-[url('/src/img/black-texture.webp')]"
  >
    <h1 class="title text-4xl md:text-[68px] mt-4">
      MR-ZEMORENO<span class="hidden md:inline text-[#b47b27] text-[50px]"
        >⭢</span
      ><span
        class="hidden md:inline text-sm text-[#ffff52] align-middle relative tracking-normal"
      >
        horror vacui
      </span><span class="hidden md:inline text-[#b47b27] text-[50px]">⭠</span>
    </h1>

    <div
      class="flex flex-col h-auto w-full
             md:grid md:grid-template-areas-md md:h-[350px]"
    >
      <Imagen client:load>
        <VerticalText>「ロボットそれとも人間？」</VerticalText>
      </Imagen>
      <Status gridArea={"status"} />
      <Consola />
    </div>
  </section>

  <style>
    body {
      margin: 0;
      height: 100vh;
      overflow: hidden;
      display: flex;
      justify-content: center;
    }

    body {
      background-color: #262626cc;
      background-image: url("/src/img/black-texture.webp");
      background-repeat: repeat;
      background-size: 25%;
    }

    .black-paper {
      background-repeat: repeat;
      background-size: 25%;
      width: 800px;
      box-shadow: 7px 7px 20px 1px rgba(0, 0, 0, 1);
      border-radius: 20px;
      color: #d2cdce;
      padding: 28px;
      padding-top: 30px;
      z-index: 2;

      /* display: grid;
    grid-template-areas: "correo" "titulo" "about" ""; */
    }

    .title {
      font-family: "Archivo Black", sans-serif;
    }
    .title {
      letter-spacing: -3px;
      display: inline-block;
      transform: scaleY(1.2);
      text-align: center;
      line-height: 1;
    }
  </style>
</Layout>
