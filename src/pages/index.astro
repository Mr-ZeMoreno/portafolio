---
import BackgroundCode from "../components/BackgroundCode.astro";
import Consola from "../components/Consola.astro";
import CppCode from "../components/CppCode.astro";
import Status from "../components/Status.astro";
import Imagen from "../components/reproductor/Reproductor.jsx";
import Layout from "../layouts/Layout.astro";
import VerticalText from "../components/VerticalText.astro";
---

<Layout title="Mr-ZeMoreno">
  <BackgroundCode />
  <section
    class="black-paper bg-[#141212e1] md:bg-[#262626cc] bg-none md:bg-[url('/src/img/black-texture.webp')]"
  >
    <h3 class="correo text-sm md:text-xl">
      <a href="mailto:hola@mr-zemoreno.dev">josecarlosvidal2@gmail.com</a>
    </h3>
    <h1 class="title text-4xl md:text-[68px]">MR-ZEMORENO</h1>
    <div
      class="flex flex-col h-auto w-full
             md:grid md:grid-template-areas-md md:h-[350px]"
    >
      <Imagen client:load>
        <VerticalText>「ロボットそれとも人間？」</VerticalText>
      </Imagen>
      <Status gridArea={"status"} />
      <Consola />
    </div>
    <CppCode />
  </section>
</Layout>
<style>
  body {
    margin: 0;
    height: 100vh;
    overflow: hidden;
    display: flex;
    justify-content: center;
  }

  body {
    background-color: #262626cc;
    background-image: url("/src/img/black-texture.webp");
    background-repeat: repeat;
    background-size: 25%;
  }

  .black-paper {
    background-repeat: repeat;
    background-size: 25%;
    height: 100dvh;
    width: 600px;
    box-shadow: 7px 7px 20px 1px rgba(0, 0, 0, 1);
    border-radius: 20px;
    color: #d2cdce;
    padding: 28px;
    padding-top: 30px;
    z-index: 2;

    /* display: grid;
    grid-template-areas: "correo" "titulo" "about" ""; */
  }

  .title,
  .correo {
    font-family: "Archivo Black", sans-serif;
  }
  .title {
    letter-spacing: -3px;
    display: inline-block;
    transform: scaleY(1.2);
    text-align: center;
    line-height: 1;
  }
  .correo {
    text-align: right;
    font-size: 17px;
    transition: ease-in 0.1s;
    margin-right: 10px;
  }
  .correo:hover {
    transform: scale(1.02);
  }
</style>
