---
import BackgroundCode from "../components/BackgroundCode.astro";
import Consola from "../components/Consola.astro";
import Status from "../components/Status.astro";
import Imagen from "../components/reproductor/Reproductor.jsx";
import Layout from "../layouts/Layout.astro";
import VerticalText from "../components/VerticalText.astro";
import Title from "../components/Tile.astro";
import WorkingPage from "../components/WorkingPage.astro";
import { PROD_ENV } from "astro:env/client";
---

<Layout title="Mr-ZeMoreno">
  {PROD_ENV && <WorkingPage />}

  <BackgroundCode />
  <section
    class="flex flex-col
    mt-auto mb-auto
    black-paper
    bg-[#141212e1] md:bg-[#262626cc] md:bg-[url('/src/img/black-texture.webp')]
    h-[100dvh] md:h-auto justify-center items-center"
  >
    <Title />
    <div
      class="flex flex-col md:grid md:grid-template-areas-md
      h-auto w-full md:h-[350px]"
    >
      <Imagen client:load>
        <VerticalText>「ロボットそれとも人間？」</VerticalText>
      </Imagen>
      <Status gridArea={"status"} />
      <Consola />
    </div>
    <p class="w-full text-center">© Derechos reservados</p>
  </section>
</Layout>

<style>
  body {
    margin: 0;
    height: 100vh;
    overflow: hidden;
    display: flex;
    justify-content: center;
  }

  body {
    background-color: #262626cc;
    background-image: url("/src/img/black-texture.webp");
    background-repeat: repeat;
    background-size: 25%;
  }

  .black-paper {
    background-repeat: repeat;
    background-size: 25%;
    width: 800px;
    box-shadow: 7px 7px 20px 1px rgba(0, 0, 0, 1);
    border-radius: 20px;
    color: #d2cdce;
    padding: 28px;
    padding-top: 30px;
    z-index: 2;
  }
</style>
