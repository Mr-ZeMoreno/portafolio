---
import BackgroundCode from "../components/BackgroundCode.astro";
import Consola from "../components/Consola.astro";
import CppCode from "../components/CppCode.astro";
import Status from "../components/Status.astro";
import VerticalText from "../components/VerticalText.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Mr-ZeMoreno">
  <BackgroundCode />
  <div class="black-paper">
    <h3 class="correo">
      <a href="mailto:hola@mr-zemoreno.dev">hola@mr-zemoreno.dev</a>
    </h3>
    <h1 class="title">MR-ZEMORENO</h1>
    <div class="about-me">
      <div class="image">
        <VerticalText>「ロボットそれとも人間？」</VerticalText>
      </div>
      <Status gridArea={"status"} />
      <Consola gridArea={"consola"} />
    </div>
    <CppCode />
  </div>
</Layout>

<style>
  body {
    margin: 0;
    height: 100vh;
    overflow: hidden;
    display: flex;
    justify-content: center;
  }

  body,
  .black-paper {
    background-color: #262626cc;
    background-image: url("/img/black-texture.webp");
    background-repeat: repeat;
    background-size: 25%;
  }

  .black-paper {
    height: 100dvh;
    width: 600px;
    box-shadow: 7px 7px 20px 1px rgba(0, 0, 0, 1);
    border-radius: 20px;
    color: #d2cdce;
    padding: 28px;
    padding-top: 30px;
    z-index: 2;
  }

  @font-face {
    font-family: "Archivo Black";
    src: url("/fonts/ArchivoBlack-Regular.woff2") format("woff2");
    font-display: swap;
    font-weight: 400;
    font-style: normal;
  }

  .title,
  .correo {
    font-family: "Archivo Black", sans-serif;
  }
  .title {
    letter-spacing: -3px;
    display: inline-block;
    transform: scaleY(1.2);
    font-size: 67px;
    text-align: center;
    line-height: 1;
  }
  .correo {
    text-align: right;
    font-size: 20px;
    transition: ease-in 0.1s;
    margin-right: 10px;
  }
  .correo:hover {
    transform: scale(1.02);
  }
  .about-me {
    height: 350px;
    width: 100%;
    display: grid;
    grid-template-areas: "image status" "image consola";
    grid-template-rows: 40px auto;
    grid-template-columns: 60% auto;
    column-gap: 10px;
    row-gap: 5px;
  }
  .image {
    height: 100%;
    background-image: url("/img/chappie.webp");
    background-position-y: -10px;
    background-size: 100%;
    grid-area: image;
  }

  @font-face {
    font-family: "Orbitron";
    src: url("/fonts/Orbitron-Regular.ttf") format("truetype");
    font-display: swap;
    font-style: normal;
  }
</style>
