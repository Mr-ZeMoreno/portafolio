---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Josecarlos Vidal">
  <div class="black-paper">
    <h3 class="texto correo">hola@mr-zemoreno.dev</h3>
    <h1 class="texto title">MR-ZEMORENO</h1>
  </div>
</Layout>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap");

  body {
    background-color: #262626cc;

    background-image: url("/img/black-texture.webp");

    background-repeat: repeat; /* Ambas imágenes se repiten */
    background-size: 20%; /* Tamaño personalizado para cada imagen */

    display: flex;
    justify-content: center;
  }
  .black-paper {
    height: 100dvh;
    width: 600px;

    border: 5px solid #4a4a4acc;

    color: #eca4b7;

    padding: 25px;
    padding-top: 30px;
  }
  .texto {
    font-family: "Archivo Black", sans-serif;
    font-weight: 400;
    font-style: normal;
  }
  .title {
    letter-spacing: -3px;
    display: inline-block;
    transform: scaleY(1.2);
    font-size: 67px;
    text-align: center;
  }
  .correo {
    text-align: right;
  }
</style>
